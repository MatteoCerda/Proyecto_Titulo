{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/main.ts",
    "src/polyfills.ts",       
    "src/app/app.routes.ts",
    "src/app/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "src/app/**/*.spec.ts",
    "**/*.worker.ts"
  ]
}

